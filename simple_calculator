#!/bin/bash

# Prompt user for input
read -p "Enter first number: " num1
read -p "Enter second number: " num2
read -p "Enter an operator (+, -, *, /): " op

# Perform calculation
case $op in
    +)
        result=$((num1 + num2))
        echo "Result: $result"
        ;;
    -)
        result=$((num1 - num2))
        echo "Result: $result"
        ;;
    \*)
        result=$((num1 * num2))
        echo "Result: $result"
        ;;
    /)
        # Check for division by zero
        if [ "$num2" -eq 0 ]; then
            echo "Error: Division by zero!"
        else
            result=$((num1 / num2))
            echo "Result: $result"
        fi
        ;;
    *)
        echo "Invalid operator"
        ;;
esac

